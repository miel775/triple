{% render 'views/partials/head.liquid', title: 'PokeApp' %}

<body id="body-index">

{% render 'views/partials/nav.liquid' %}

<main id="overview">
       

    {% for p in pokemons %}

        <a href="/pokemon/{{ p.id }}" class="a-head" id="type-{{ p.type | downcase }}">
            <article  class="article-head">

                {% comment %} caught pokemon {% endcomment %}
                <div class="pokeball">
                    {% if caught %}
                    <form method="POST" action="/pokemon/{{ id }}/caught" data-enhanced="pokemon-{{ id }}">
                    <img src="../assets/general/caught.png" alt="Pokeball caught">
                    </form>
                    {% comment %} Als de pokemon nog niet is gevangen {% endcomment %}
                    {% else %} 
                    <form method="POST" action="/pokemon/{{ id }}/caught" data-enhanced="formulier-{{ id }}">
                    <img src="../assets/general/uncaught.png" alt="Pokeball uncaught">
                    </form>
                    {% endif %}
                </div>


                <img id="img-head-hover"
                    src="{{ p.sprite }}" 
                    height="100" 
                    width="100" 
                    alt="{{ p.name }}"
                    onclick="playAudio()"
                    aria-hidden="true"
                >

                <div id="animation-hover">
                    <img src="../assets/general/balloon.svg" alt="ballon-{{ p.name }}" width="200" height="100" loading="lazy">
                    <p id="name {{ p.name }}"> {{ p.name | capitalize }}</p>
                </div>
                
            </article>
        </a>
{% endfor %}


</main>

<picture autoplay muted loop id="video-bg">
    <img src="../assets/general/day.png" alt="day pokemon background" width="1920" height="1080">
</picture>

<picture autoplay muted loop id="video-bg-night">
    <img src="../assets/general/night.png" alt="night pokemon background" width="1920" height="1080">
</picture>

</body>

</html>